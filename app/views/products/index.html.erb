  <div class="center">
    <div class="row">
       <% @products.each do |product| %>
      <div class="col-md-3">
        <div class="thumbnail">
           <%= link_to image_tag(product.image.url(:medium)), product %>
            <div class="caption">
            <h3><%= link_to product.name, product,order_item: @order_items %></h3>
            <p><%= number_to_currency(product.price) %></p><br>
              <p><%= "Sold by #{product.user.name}" %></p><br>
                <p><%= link_to 'Add to cart', shopping_cart_path(:product_id => product), :method => 'POST', class:"btn btn-primary" %></p>

          </div>
          </div>
    </div>
<% end %>
</div>
