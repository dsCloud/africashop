<table class="table table-striped table-bordered">
<tr>
 <th>Image</th>
  <th>Item</th>
  <th>Price</th>
  <th>Seller</th>
  <th>Date Purchased</th>
</tr>
 <% @orders.each do |order| %>
<tr>
   <td> <%= image_tag order.product.image.url(:thumb) %></td>
   <td><%= order.product.try(:name) %></td>
   <td><%= number_to_currency(order.product.try(:price)) %></td>
  <td><%= order.seller.try(:name) %></td>
  <td><%= order.try(:created_at).strftime("%B %-d, %Y") %></td>
  </tr>
<% end %>
</table>


