<div class="row">
  <div class="col-md-3">
  </div>

  <div class="col-md-6">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= devise_error_messages! %>

<div class="panel panel-info">
  <div class="panel-heading">Sign Up</div>
  <div class="panel-body">
      <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder:"enter you email address: mail@example.com"  %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder:"enter your password (8 characters minimum)"  %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" , placeholder:"re-enter your password"  %>
  </div>
  <div class="actions">
    <%= f.submit "Sign up", class:"btn btn-sm btn-info" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

  </div></div>
    <div class="col-md-3"></div>
  </div>
</div>


